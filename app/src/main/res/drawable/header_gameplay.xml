<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-6dp"
        android:left="-6dp"
        android:right="-6dp"
        android:bottom="0dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#000000"
                android:startColor="#1B1B1B"
                android:type="linear" />
            <stroke
                android:width="5dp"
                android:color="#6E6E6E"/>
        </shape>
    </item>

</layer-list>

